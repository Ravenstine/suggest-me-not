{
  "manifest_version": 2,
  "name": "Suggest Me Not",
  "version": "0.1.4",
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": ["node_modules/jquery/dist/jquery.slim.min.js", "index.js"]
    }
  ],
  "icons": { "16": "icon16.png",
             "32": "icon32.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon32.png",
    "default_title": "Suggest Me Not"
  },
  "background": {
    "scripts": ["counter.js"],
    "persistent": false
  }
}